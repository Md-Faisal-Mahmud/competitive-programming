#include<bits/stdc++.h>
#define faster ios::sync_with_stdio(false); cin.tie(NULL); cout.tie(NULL);
using namespace std;
int cnt[5] ;     // if we declare an array globally then all elements of array will initialize with 0 
int main()
{
    int n ; cin >> n;

    for (int i = 0; i<n; i++)
    {
        int s ; cin >> s ;
        cnt[s] += 1 ;
    }
    
    int total = cnt[4] + cnt[3] + cnt[2]/2 ; 
    cnt[1] -= cnt[3] ;
    if (cnt[2]%2==1)
    {
        total += 1;
        cnt[1] -= 2;
    }
    
    if (cnt[1] >0)
    {
        total += (cnt[1] +3)/4;
    }
    
    cout << total ;

}
